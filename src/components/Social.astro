---
import { Icon } from 'astro-icon/components';

const socialMediaData: { title: string; link: string; icon: string }[] = [
  {
    title: 'github',
    link: 'https://github.com/flohrel',
    icon: 'fa6-brands:github',
  },
  {
    title: 'linkedin',
    link: 'https://www.linkedin.com/in/florian-ohrel-ba6484253/',
    icon: 'fa6-brands:linkedin',
  },
  {
    title: 'mail',
    link: 'mailto:florian.ohrel@pm.me',
    icon: 'material-symbols:mail-outline-rounded',
  },
];

interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<div
  id="social-bar"
  class={(className || '') + ' ' + 'hidden p-6 md:p-5 xl:p-8 z-50'}
>
  {
    socialMediaData.map((item) => (
      <a
        class="w-7 h-7 hover:-translate-y-1 transition-transform duration-200 ease-in-out opacity-0 animate-fadein group-[.menu--toggle]/content:animate-fadein group-[.menu--toggle]/content:text-frame group-[.menu--toggle]/content:hover:text-mintHover"
        href={item.link}
        aria-label={'Open ' + item.title + ' profile'}
      >
        <Icon name={item.icon} class={'w-7 h-7'} />
      </a>
    ))
  }
</div>
