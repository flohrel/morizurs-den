---
import { Icon } from 'astro-icon/components';

const socialMediaData: { title: string; link: string }[] = [
  { title: 'github', link: 'https://github.com/morizur' },
  {
    title: 'linkedin',
    link: 'https://www.linkedin.com/in/florian-ohrel-ba6484253/',
  },
];
---

<div
  id="social-bar"
  class="flex gap-2 p-4 sm:p-6 md:p-8 lg:p-10 xl:p-12 2xl:p-14"
>
  {
    socialMediaData.map((item) => (
      <a
        class="w-7 h-7"
        href={item.link}
        aria-label={'Open ' + item.title + ' profile'}
      >
        <Icon name={'fa6-brands:' + item.title} class={'w-7 h-7'} />
      </a>
    ))
  }
</div>
